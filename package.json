{
  "name": "soma",
  "version": "0.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "tsc --build",
    "start": "dotenv -e .env.local tsc --build && dotenv -e .env.local node ./dist/main.js",
    "start:dev": "dotenv -e .env.local nodemon ./src/main.ts",
    "test": "jest",
    "test:coverage": "dotenv -e .env.test.local -- jest -i --coverage",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "pm": "dotenv -e .env.local npx prisma migrate dev --name $migration_name && dotenv -e .env.local npx prisma generate",
    "ps": "dotenv -e .env.local npx prisma studio"
  },
  "keywords": [],
  "author": "Djimra NGARLEITA",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "prisma": "^5.20.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1"
  }
}
